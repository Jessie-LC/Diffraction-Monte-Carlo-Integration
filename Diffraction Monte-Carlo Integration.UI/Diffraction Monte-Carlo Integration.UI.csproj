    <RootNamespace>Diffraction_Monte_Carlo_Integration.UI</RootNamespace>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Diffraction Monte-Carlo Integration\Diffraction Monte-Carlo Integration.vcxproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
